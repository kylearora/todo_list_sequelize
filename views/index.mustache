<html>
  <head>
    <link rel="stylesheet" href="/css/styles.css">
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="main">
      <form action="/" method="post">
        <div class="inputWrapper">
          <input class="inputField" type="text" name="todo" value="" placeholder="What do you have to do?">
          <input class="inputButton" type="submit" value="Add Task">
        </div>
      </form>
      <div class="taskContent">
        <h3 id="todoHeader">Incomplete Tasks</h3>
        {{#todos}}
          <form class="" action="/completed" method="post">
            <div class="todoSection">
              <button class= "completeButton" type="submit" name="button" value="{{id}}">I'm Done!</button>
              <h3 class="todoItem">{{Task}}</h3>
            </div>
          </form>
          <form class="edit" action="/edit" method="post">
            <div class="editSection">
              <input id="editField" type="text" name="edit" value="" placeholder="Update your Task">
              <button type="submit" name="editButton" value="{{id}}">Update your Task</button>
            </div>
          </form>
        {{/todos}}
      </div>
      <div class="deleteAllDiv">
        <form class="" action="/deleteAll" method="post">
          <button id="deleteAllButton" type="submit" name="deleteAllButton" value="">Delete All Tasks</button>
        </form>
      </div>
    </div>
  </body>
</html>
